rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // دالة للتحقق مما إذا كان المستخدم مديراً
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // قواعد مجموعة المستخدمين
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow create: if request.auth != null;
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }

    // قواعد مجموعة المنتجات
    match /products/{productId} {
      allow read: if true; // الجميع يمكنهم رؤية المنتجات
      allow write: if isAdmin(); // المدير فقط يمكنه الإضافة والتعديل والحذف
    }

    // قواعد مجموعة الإعدادات
    match /settings/{settingId} {
      allow read: if true; // الجميع يمكنهم قراءة الإعدادات (مثل الألوان واسم المتجر)
      allow write: if isAdmin(); // المدير فقط يمكنه تغيير الإعدادات
    }

    // قواعد مجموعة الطلبات (إذا تم تفعيلها مستقبلاً)
    match /orders/{orderId} {
      allow create: if true; // السماح للجميع (بما في ذلك الضيوف) بإنشاء طلبات
      allow read, update, delete: if isAdmin(); // المدير فقط يمكنه إدارة الطلبات
    }
  }
}
